	<script type="text/javascript">

		function emailJS() {

			// show modal
			let contact_button = document.getElementById('contact_button');
			contact_button.style.textDecoration = "underline";
			contact_button.addEventListener('click', (e) => {
				console.log('clicked')
				e.preventDefault();
				e.stopPropagation();

				// bootstrap/jquery
				$('#email_modal').modal('show');
			});

			// handle submit
			let submit_button = document.getElementById('contact_email_send');
			submit_button.addEventListener('click', (e) => {
				e.preventDefault();
				e.stopPropagation();
				if (e.target != e.currentTarget) return;

				let from = document.getElementById('contact_email_from').value;
				let message = document.getElementById('contact_email_message').value;
				let token = "<%- (typeof token != 'undefined'?token:'') %>";
				
				if(from==="" || message===""){
					$('#email_modal').modal('hide');
					return;
				};
				
				e.currentTarget.disabled = true;
				e.currentTarget.innerHTML = "Sending...";				
				let postJSON = {
					"from": String(from),
					"message": String(message),
					"token": String(token)
				}
				let postString = JSON.stringify(postJSON);
				var xhttp;
				xhttp = new XMLHttpRequest();
				xhttp.ontimeout = function () {
					let submit_button = document.getElementById('contact_email_send');
					submit_button.innerHTML = "Timed out.";
					setTimeout(() => {
						$('#email_modal').modal('hide');
						document.getElementById('contact_email_from').value = "";
						document.getElementById('contact_email_message').value = "";
						let submit_button = document.getElementById('contact_email_send');
						submit_button.disabled = false;
						submit_button.innerHTML = "Send";
					}, 2000);
				}
				xhttp.onreadystatechange = function () {
					let submit_button = document.getElementById('contact_email_send');
					if (this.readyState == 4 && this.status == 200) {
						if (this.status === 200) {
							console.log("success", this);
							// clear values and hide
							submit_button.innerHTML = "Sent!";
							console.log("foo");

							setTimeout(() => {
								console.log("bar");
								$('#email_modal').modal('hide');
								document.getElementById('contact_email_from').value = "";
								document.getElementById('contact_email_message').value = "";
								let submit_button = document.getElementById('contact_email_send');
								submit_button.disabled = false;
								submit_button.innerHTML = "Send";
							}, 2000);
						} else {
							submit_button.innerHTML = "Failed to send.";
							console.log("some error", this);
							setTimeout(() => {
								$('#email_modal').modal('hide');
								document.getElementById('contact_email_from').value = "";
								document.getElementById('contact_email_message').value = "";
								let submit_button = document.getElementById('contact_email_send');
								submit_button.disabled = false;
								submit_button.innerHTML = "Send";
							}, 2000);
						}
					}
				}
				xhttp.open("POST", "/contact_email_handler", true);
				xhttp.timeout = 5000;
				xhttp.withCredentials = true; // this sends cookies now
				xhttp.setRequestHeader("Content-type", "application/json");
				console.log('sending email request');
				xhttp.send(postString);
				return;
			})

		}

		function autorun() {
			console.log('page ready');

			emailJS();

		}
		if (window.addEventListener) window.addEventListener("load", autorun, false);
		else if (window.attachEvent) window.attachEvent("onload", autorun);
		else window.onload = autorun;
	</script>
